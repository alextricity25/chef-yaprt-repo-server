server {
    listen <%= node['yaprt-repo-server']['repo-server-port'] %>;
    server_name <%= node['yaprt-repo-server']['repo-server-name'] %>;

    # Logging
    access_log /var/log/<%= node['yaprt-repo-server']['repo-service-user-name'] %>/<%= node['yaprt-repo-server']['repo_server_name'] %>.access.log;
    error_log /var/log/<%= node['yaprt-repo-server']['repo-service-user-name'] %>/<%= node['yaprt-repo-server']['repo-server-name'] %>.error.log notice;

    location / {
        root <%= node['yaprt-repo-server']['repo-service-home-folder'] %>/repos/;
        autoindex on;
        expires 5h;
    }

}
